@model Instructor
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<table class="table table-bordered table-hover">

    <thead>
    <td>Id</td>
    <td>Name</td>
    <td>Image</td>
    <td>Salary</td>
    <td>Address</td>
    <td>Department</td>
    <td>Course</td>
    </thead>

    <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
                <td><img style="width:80px" src="~/images/@Model.ImageURL" /></td>
                <td>@Model.Salary</td>
                <td>@Model.Address</td>
                <td>@Model.Department.Name</td>
                <td>@Model.Course.Name</td>
            </tr>
    </tbody>


</table>