@model List<Instructor>
@{
    ViewData["Title"] = "Search";
}

<h1 class="mb-4 text-center">Search Results</h1>

<div class="container">
    <!-- Search Form -->
    <form action="/Instructor/Search" method="get" class="d-flex align-items-center mb-4">
        <label for="searchName" class="me-2">Search by Name</label>
        <input type="text" name="Name" id="searchName" class="form-control me-2" style="width: auto;" />
        <input type="submit" value="Search" class="btn btn-secondary" />
    </form>

    <!-- Search Results Table -->
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark text-center">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Salary</th>
                <th>Address</th>
                <th>Department</th>
                <th>Course</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center align-middle">
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <img style="width:40px; border-radius:8px;" src="~/images/@item.ImageURL" alt="Instructor Image" />
                    </td>
                    <td>@item.Salary</td>
                    <td>@item.Address</td>
                    <td>@item.Department.Name</td>
                    <td>@item.Course.Name</td>
                    <td>
                        <a href="/Instructor/Edit?id=@item.Id&department=@item.Department.Name&course=@item.Course.Name" class="btn btn-secondary me-2">Edit</a>
                        <a href="/Instructor/Remove?id=@item.Id" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Return to Index Button -->
    <div class="text-center mt-4">
        <a href="/instructor/index" class="btn btn-success">Return to Index</a>
    </div>
</div>
